@{
    ViewData["Title"] = "Dashboard";
    var role = (ViewData["Role"]?.ToString() ?? "").Trim(); // "Tenant" or "Landlord"
    ViewData["BodyClass"] = "dashboard-page";
}

<div class="container my-4">
    <h1 class="text-center fw-bold mb-2">Welcome To Your Dashboard</h1>
    <p class="text-center text-muted mb-4">
        @(role == "Landlord"
            ? "You are a landlord. Manage announcements and the calendar."
            : "You are a tenant. Manage chores, expenses, calendar and announcements.")
    </p>

    @if (role == "Landlord")
    {
        <!-- Landlord: 2 tiles -->
        <div class="row g-4 dashboard-tiles">
            <div class="col-12 col-md-6">
                <a class="tile-card" asp-controller="Calendar" asp-action="Index">
                    <div class="tile-media" style="background-image:url('/img/tiles/calendar.png');"></div>
                    <div class="tile-label">Calendar</div>
                    <div class="tile-body"><p class="tile-text">Create and manage events for the property.</p></div>
                </a>
            </div>

            <div class="col-12 col-md-6">
                <a class="tile-card" asp-controller="Announcements" asp-action="Index">
                    <div class="tile-media" style="background-image:url('/img/tiles/announcement.png');"></div>
                    <div class="tile-label">Announcements</div>
                    <div class="tile-body"><p class="tile-text">Post updates and view recent notices.</p></div>
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Default/Tenant: 4 tiles -->
        <div class="row g-4 dashboard-tiles">
            <div class="col-12 col-md-6">
                <a class="tile-card" asp-controller="Chores" asp-action="Index">
                    <div class="tile-media" style="background-image:url('/img/tiles/chores.png');"></div>
                    <div class="tile-label">Chores</div>
                    <div class="tile-body"><p class="tile-text">View all your chores and add new ones.</p></div>
                </a>
            </div>

            <div class="col-12 col-md-6">
                <a class="tile-card" asp-controller="Expenses" asp-action="Index">
                    <div class="tile-media" style="background-image:url('/img/tiles/expenses.png');"></div>
                    <div class="tile-label">Expenses</div>
                    <div class="tile-body"><p class="tile-text">Track whatâ€™s owed and add new expenses.</p></div>
                </a>
            </div>

            <div class="col-12 col-md-6">
                <a class="tile-card" asp-controller="Calendar" asp-action="Index">
                    <div class="tile-media" style="background-image:url('/img/tiles/calendar.png');"></div>
                    <div class="tile-label">Calendar</div>
                    <div class="tile-body"><p class="tile-text">See upcoming events and plan the week.</p></div>
                </a>
            </div>

            <div class="col-12 col-md-6">
                <a class="tile-card" asp-controller="Announcements" asp-action="Index">
                    <div class="tile-media" style="background-image:url('/img/tiles/announcement.png');"></div>
                    <div class="tile-label">Announcements</div>
                    <div class="tile-body"><p class="tile-text">Read the latest updates from your landlord.</p></div>
                </a>
            </div>
        </div>
    }
</div>
