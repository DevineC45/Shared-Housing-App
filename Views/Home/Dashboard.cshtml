@{
    ViewData["Title"] = "Dashboard";
    var role = ViewData["Role"]?.ToString();
}

<h2>Welcome to your dashboard</h2>

@if (role == "Landlord")
{
    <p>You are a landlord. You can post announcements and manage the calendar.</p>

    <div class="mt-3">
        <a class="btn btn-primary" asp-controller="Announcements" asp-action="Create">
            Post New Announcement
        </a>
    </div>
}
else
{
    <p>You are a tenant. You can view chores and expenses here.</p>

    <div class="mt-3">
        <a class="btn btn-primary me-2" asp-controller="Chores" asp-action="MyChores">View My Chores</a>
        <a class="btn btn-outline-secondary me-2" asp-controller="Chores" asp-action="Schedule">View Chore Schedule</a>
        <a class="btn btn-success me-2" asp-controller="Chores" asp-action="Create">Add New Chore</a>
    </div>

    <div class="mt-3">
        <a class="btn btn-info me-2" asp-controller="Expenses" asp-action="MyExpenses">View My Expenses</a>
        <a class="btn btn-outline-dark me-2" asp-controller="Expenses" asp-action="Index">All Expenses</a>
        <a class="btn btn-success" asp-controller="Expenses" asp-action="Create">Add New Expense</a>
    </div>
}