@{
    ViewData["Title"] = "Dashboard";
    var role = ViewData["Role"]?.ToString();
}

<h2 class="text-center mb-4">Welcome to your dashboard</h2>

@if (role == "Landlord")
{
    <p class="text-center mb-4">You are a landlord. You can post announcements and manage the calendar.</p>

    <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a class="btn btn-primary btn-lg px-5 py-3" asp-controller="Announcements" asp-action="Create">
            ðŸ“¢ Post New Announcement
        </a>
        <a class="btn btn-outline-primary btn-lg px-5 py-3" asp-controller="Calendar" asp-action="Index">
            ðŸ“… Manage Calendar
        </a>
    </div>
}
else
{
    <p class="text-center mb-4">You are a tenant. You can manage your chores and expenses here.</p>

    <div class="d-flex justify-content-center mb-4 gap-3 flex-wrap">
        <a class="btn btn-primary btn-lg" asp-controller="Chores" asp-action="Index">
            Chores
        </a>
        <a class="btn btn-info btn-lg" asp-controller="Expenses" asp-action="Index">
            Expenses
        </a>
        <a class="btn btn-outline-secondary btn-lg" asp-controller="Calendar" asp-action="Index">
            Calendar
        </a>
    </div>
}
