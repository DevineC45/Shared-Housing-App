@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-4 fs-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <h1 class="mb-4 text-center fw-bold fs-1">Contact Us</h1>

            <p class="lead text-center mb-4">
                Got a question or feedback about Homigo? Send us a message and we’ll get back to you as soon as possible.
            </p>

            @if (TempData["ContactOk"] != null)
            {
                <div class="alert alert-success text-center">
                    ✅ Thank you for your message! We’ll get back to you shortly.
                </div>
            }

            <form method="post" asp-action="Contact">
                <div class="mb-3">
                    <label for="Name" class="form-label fw-bold">Your Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" required />
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label fw-bold">Your Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" required />
                </div>

                <div class="mb-3">
                    <label for="Message" class="form-label fw-bold">Message</label>
                    <textarea class="form-control" id="Message" name="Message" rows="5" required></textarea>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 me-2">Send Message</button>
                    <a asp-controller="Home" asp-action="Features" class="btn btn-outline-primary">View Features</a>
                </div>
            </form>
        </div>
    </div>
</div>