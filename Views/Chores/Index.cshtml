@model IEnumerable<SharedHousingApp.Models.Chore>

@{
    ViewData["Title"] = "Chores Hub";
    ViewData["BodyClass"] = "flat-page"; // keep the page flat (no pill)
}

<div class="container py-3">
    <h1 class="text-center mb-3">Chores Hub</h1>

    <div class="d-flex justify-content-center mb-3 gap-2 flex-wrap">
        <a class="btn btn-primary" asp-action="Create">Add New Chore</a>
        <a class="btn btn-outline-primary" asp-action="MyChores">View My Chores</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success chore-alert text-center mb-3">
            @TempData["Message"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No chores assigned yet.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-dark table-striped align-middle mb-0 rounded-3 overflow-hidden">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Currently Assigned To</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chore in Model)
                    {
                        <tr>
                            <td>@chore.Title</td>
                            <td>@chore.AssignedToUser?.Name</td>
                            <td class="text-end">
                                <form asp-action="Complete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@chore.Id" />
                                    <button class="btn btn-success btn-sm">Done &amp; Rotate</button>
                                </form>

                                <a class="btn btn-primary btn-sm"
                                   asp-action="Edit" asp-route-id="@chore.Id">Edit</a>

                                <button type="button"
                                        class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-id="@chore.Id"
                                        data-name="@chore.Title"
                                        data-type="chore">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Delete Modal (same style as Expenses) -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-white text-dark">
            <div class="modal-header border-bottom">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteItemName"></strong>?
            </div>
            <div class="modal-footer border-top">
                <form id="deleteForm" method="post">
                    <input type="hidden" name="id" id="deleteItemId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', event => {
        const btn = event.relatedTarget;
        const id = btn.getAttribute('data-id');
        const name = btn.getAttribute('data-name');
        const type = btn.getAttribute('data-type'); // "chore"

        document.getElementById('deleteItemName').textContent = `"${name}"`;
        document.getElementById('deleteItemId').value = id;

        // e.g. /Chores/Delete
        document.getElementById('deleteForm').action =
            `/${type.charAt(0).toUpperCase() + type.slice(1)}s/Delete`;
    });
</script>
}
