@model IEnumerable<SharedHousingApp.Models.Expense>

@{
    ViewData["Title"] = "Expenses Hub";
}

<h1 class="text-center mb-4">Expenses Hub</h1>


<div class="d-flex justify-content-center mb-4 gap-3 flex-wrap">
    <a class="btn btn-success btn-lg" asp-action="Create">Add New Expense</a>
    <a class="btn btn-info btn-lg" asp-action="MyExpenses">View My Expenses</a>
</div>

@if (!Model.Any())
{
    <p class="text-center text-light fw-bold mb-0">No expenses have been added yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-dark table-striped align-middle mb-0 rounded-3 overflow-hidden">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Paid By</th>
                    <th>Amount</th>
                    <th>Shared With</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@(expense.Date?.ToShortDateString())</td>
                        <td>@expense.Title</td>
                        <td>@expense.PaidByUser?.Name</td>
                        <td>Â£@expense.Amount.ToString("0.00")</td>
                        <td>
                            @if (expense.SharedWithUsers.Any())
                            {
                                <ul class="mb-0">
                                    @foreach (var user in expense.SharedWithUsers)
                                    {
                                        <li>@user.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <em>No one selected</em>
                            }
                        </td>
                        <td>
                            <button type="button"
                                    class="btn btn-danger btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-id="@expense.Id"
                                    data-name="@expense.Title"
                                    data-type="expense">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Delete Modal (match Chores: white modal, dark text) -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-white text-dark">
            <div class="modal-header border-bottom">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteItemName"></strong>?
            </div>
            <div class="modal-footer border-top">
                <form id="deleteForm" method="post">
                    <input type="hidden" name="id" id="deleteItemId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            const type = button.getAttribute('data-type'); // "expense"

            document.getElementById('deleteItemName').textContent = `"${name}"`;
            document.getElementById('deleteItemId').value = id;

            // e.g. /Expenses/Delete
            document.getElementById('deleteForm').action =
                `/${type.charAt(0).toUpperCase() + type.slice(1)}s/Delete`;
        });
    </script>
}
