@model IEnumerable<SharedHousingApp.Models.Expense>

@{
    ViewData["Title"] = "Settled Expenses";
    var currentUserId = Context.Session.GetString("UserId");
}

<div class="container py-3">
    <h1 class="text-center mb-3">Settled Expenses</h1>

    <div class="d-flex justify-content-center mb-3 gap-2 flex-wrap">
        <a class="btn btn-gradient w-100 w-sm-auto"
           asp-controller="Expenses" asp-action="Index">
            All Expenses
        </a>

        <a class="btn btn-gradient w-100 w-sm-auto"
           asp-controller="Expenses" asp-action="MyExpenses">
            Back to My Expenses
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">You haven’t settled any expenses yet.</div>
    }
    else
    {
        <!-- MOBILE: card list -->
        <div class="d-sm-none">
            <div class="d-flex flex-column gap-2">
                @foreach (var expense in Model)
                {
                    var peopleCount = expense.SharedWithUsers.Count + 1;
                    var splitAmount = peopleCount > 0 ? expense.Amount / peopleCount : 0;
                    var isOwner = currentUserId != null && expense.PaidByUserId == int.Parse(currentUserId);

                    <div class="card bg-dark border-secondary text-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="mb-1 text-break">@expense.Title</h6>
                                <span class="badge bg-secondary">@expense.Date?.ToShortDateString()</span>
                            </div>

                            <div class="fw-semibold mb-2">£@expense.Amount.ToString("0.00")</div>

                            <!-- Clear labels on dark background -->
                            <div class="row g-2 mb-2">
                                <div class="col-7">
                                    <div class="label-dim small mb-1">Shared With</div>
                                    <ul class="mb-0 ps-3">
                                        @foreach (var user in expense.SharedWithUsers)
                                        { <li>@user.Name</li> }
                                    </ul>
                                </div>
                                <div class="col-5 text-end">
                                    <div class="label-dim small mb-1">Each Person Owed</div>
                                    <span class="badge bg-info text-dark">£@splitAmount.ToString("0.00")</span>
                                </div>
                            </div>

                            <div class="d-grid">
                                @if (isOwner)
                                {
                                    <form asp-action="Delete" asp-route-id="@expense.Id" method="post">
                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- DESKTOP/TABLET: table -->
        <div class="table-responsive d-none d-sm-block">
            <table class="table table-dark table-striped align-middle rounded-3 overflow-hidden shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Amount</th>
                        <th>Shared With</th>
                        <th>Each Person Owed</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var expense in Model)
                {
                    var peopleCount = expense.SharedWithUsers.Count + 1;
                    var splitAmount = peopleCount > 0 ? expense.Amount / peopleCount : 0;
                    var isOwner = currentUserId != null && expense.PaidByUserId == int.Parse(currentUserId);

                    <tr>
                        <td class="text-nowrap">@expense.Date?.ToShortDateString()</td>
                        <td class="text-break">@expense.Title</td>
                        <td class="text-nowrap">@("£" + expense.Amount.ToString("0.00"))</td>
                        <td>
                            <ul class="mb-0">
                                @foreach (var user in expense.SharedWithUsers)
                                { <li>@user.Name</li> }
                            </ul>
                        </td>
                        <td class="text-nowrap">@("£" + splitAmount.ToString("0.00"))</td>
                        <td class="text-end">
                            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-sm-end">
                                @if (isOwner)
                                {
                                    <form asp-action="Delete" asp-route-id="@expense.Id" method="post" class="d-inline">
                                        <button type="submit" class="delete-x btn btn-sm btn-outline-danger">❌</button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
  .btn-gradient {
      background: linear-gradient(to right, #4facfe, #8e44ad);
      color: white;
      border: none;
      padding: 0.5rem;
      border-radius: 0.5rem;
      font-weight: 600;
      text-decoration: none;
  }
  .btn-gradient:hover { opacity: 0.9; color: white; }

  .delete-x {
      background: none; border: none; color: #dc3545;
      font-size: 1.1rem; cursor: pointer; padding: 0; line-height: 1;
  }
  .delete-x:hover { color: #bb2d3b; }

  /* readable labels on dark cards */
  .label-dim { color: rgba(255,255,255,.75); font-weight: 500; letter-spacing: .02em; }
</style>
