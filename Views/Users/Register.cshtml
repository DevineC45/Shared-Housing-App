@model SharedHousingApp.Models.User
@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "landing-page";
}

<h2 class="text-center mb-4">Register</h2>

<form asp-action="Register" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-light fw-bold mt-1 d-block"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" autocomplete="email" />
        <span asp-validation-for="Email" class="text-light fw-bold mt-1 d-block"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-light fw-bold mt-1 d-block"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label">Role</label>
        <select asp-for="Role" class="form-select" required>
            <option value="" selected disabled>-- Select role --</option>
            <option value="Tenant">Tenant</option>
            <option value="Landlord">Landlord</option>
        </select>
        <span asp-validation-for="Role" class="text-light fw-bold mt-1 d-block"></span>
    </div>

    <button type="submit" class="btn btn-success">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
