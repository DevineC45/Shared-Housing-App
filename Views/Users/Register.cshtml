@model SharedHousingApp.Models.User
@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "landing-page";
}

<h2 class="text-center mb-4">Register</h2>

<form asp-action="Register" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-light fw-bold mt-1 d-block"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" autocomplete="email" />
        <span asp-validation-for="Email" class="text-light fw-bold mt-1 d-block"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-light fw-bold mt-1 d-block"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label">Role</label>
        <select asp-for="Role" class="form-select" required>
            <option value="" selected disabled>-- Select role --</option>
            <option value="Tenant">Tenant</option>
            <option value="Landlord">Landlord</option>
        </select>
        <span asp-validation-for="Role" class="text-light fw-bold mt-1 d-block"></span>
    </div>

    <!-- Consent -->
    <div class="form-check my-3">
        <input class="form-check-input" type="checkbox" id="consentCheckbox" name="Consent" value="true" required>
        <label class="form-check-label" for="consentCheckbox">
            I consent to my data being used in accordance with the
            <a asp-controller="Home" asp-action="Privacy" target="_blank">Privacy Policy</a>.
        </label>
        <!-- Server-side error placeholder (since Consent isn't on the model) -->
        <span class="text-light fw-bold mt-1 d-block" data-valmsg-for="Consent" data-valmsg-replace="true"></span>
    </div>

    <button type="submit" class="btn btn-success" id="registerBtn" disabled>Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const cb = document.getElementById('consentCheckbox');
            const btn = document.getElementById('registerBtn');
            const toggle = () => { btn.disabled = !cb.checked; };
            toggle(); // initial state
            cb.addEventListener('change', toggle);
        })();
    </script>
}
